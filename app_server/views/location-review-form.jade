extends layout

block content
    .row.page-header
        .col-lg-12
            h1 Adionar Avaliação
    .row
        .col-xs-6.col-md-12
            form.form-horizontal(action="/location", method="get", role="form")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="name") Nome
                    .col-xs-12.col-sm-10
                        input#name.form-control(name="name")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="rating") Estrelas
                    .col-xs-12.col-sm-2
                        select#ratting.form-control.input-sm(name="ratting")
                            option 5
                            option 4
                            option 3
                            option 2
                            option 1
                .form-group
                    label.col-sm-2.control-label(for="review") Comentário
                    .col-sm-10
                        textarea#review.form-control(name="review", rows="5")
                button.btn.btn-default.pull-right Adicionar Comentário
            .col-xs-6.col-md-12